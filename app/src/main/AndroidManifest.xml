<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />


    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />


    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_sinnombre"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_sinnombre"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Proyecto_3a"
            android:exported="true"> <!-- Establece android:exported en true -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".informacion"
            android:theme="@style/Theme.Proyecto_3a"
            android:exported="true"
            android:label="Information Activity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.Proyecto_3a"/>
        <activity android:name=".Perfil"
            android:theme="@style/Theme.Proyecto_3a"/>

        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Proyecto_3a"/>

        <activity android:name=".EditarPerfil"
            android:theme="@style/Theme.Proyecto_3a"/>
        <activity android:name=".CambiarContrasenya"
            android:theme="@style/Theme.Proyecto_3a"/>
        <activity android:name=".EnviarMailContrasenya"
            android:theme="@style/Theme.Proyecto_3a"/>

        <activity
            android:name=".RecuperarContrasenya"
            android:theme="@style/Theme.Proyecto_3a"/>

        <activity
            android:name=".CodigoContrasenya"
            android:theme="@style/Theme.Proyecto_3a"/>

    </application>

</manifest>